{
  "name": "fastify-oauth-api",
  "version": "1.0.0",
  "description": "Production-ready Fastify v5 OAuth API with PostgreSQL, Redis, Next.js admin panel, and Docker orchestration",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.21.0+sha512.da3337267e400fdd3d479a6c68079ac6db01d8ca4f67572083e722775a796788a7a9956613749e000fac20d424b594f7a791a5f4e2e13581c5ef947f26968a40",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:init": "bash scripts/dev-init.sh",
    "dev": "concurrently \"pnpm --filter=@fastify-oauth-api/backend dev\" \"pnpm --filter=frontend dev\" --names \"API,FRONTEND\" --prefix-colors \"cyan,magenta\" --kill-others",
    "dev:api": "pnpm --filter=@fastify-oauth-api/backend dev",
    "dev:frontend": "pnpm --filter=frontend dev",
    "kill": "bash -c 'lsof -ti:1337 | xargs kill -9 2>/dev/null || true; lsof -ti:3000 | xargs kill -9 2>/dev/null || true; echo \"Killed processes on ports 1337 and 3000\"'",
    "build": "pnpm --filter=frontend build && pnpm --filter=@fastify-oauth-api/backend build",
    "build:prod": "pnpm --filter=frontend build && pnpm --filter=@fastify-oauth-api/backend build:prod",
    "build:frontend": "pnpm --filter=frontend build",
    "build:backend": "pnpm --filter=@fastify-oauth-api/backend build",
    "docker:start": "bash scripts-docker/start.sh",
    "docker:stop": "bash scripts-docker/system/stop-all.sh",
    "docker:restart": "bash scripts-docker/system/restart-all.sh",
    "docker:health": "bash scripts-docker/system/health-check.sh",
    "docker:logs": "bash scripts-docker/system/logs-all.sh",
    "docker:remove": "bash scripts-docker/system/remove-all.sh",
    "docker:remove:volumes": "bash scripts-docker/system/remove-volumes.sh",
    "docker:setup:swap": "bash scripts-docker/system/setup-swap.sh",
    "docker:postgres": "bash scripts-docker/postgres/run.sh",
    "docker:postgres:stop": "bash scripts-docker/postgres/stop.sh",
    "docker:postgres:log": "bash scripts-docker/postgres/log.sh",
    "docker:postgres:exec": "bash scripts-docker/postgres/exec.sh",
    "docker:postgres:backup": "bash scripts-docker/postgres/backup.sh",
    "docker:postgres:remove": "bash scripts-docker/postgres/remove.sh",
    "docker:redis": "bash scripts-docker/redis/run.sh",
    "docker:redis:stop": "bash scripts-docker/redis/stop.sh",
    "docker:redis:log": "bash scripts-docker/redis/log.sh",
    "docker:redis:exec": "bash scripts-docker/redis/exec.sh",
    "docker:redis:remove": "bash scripts-docker/redis/remove.sh",
    "docker:api": "bash scripts-docker/api/run.sh",
    "docker:api:stop": "bash scripts-docker/api/stop.sh",
    "docker:api:log": "bash scripts-docker/api/log.sh",
    "docker:api:exec": "bash scripts-docker/api/exec.sh",
    "docker:api:rebuild": "bash scripts-docker/api/rebuild.sh",
    "docker:api:remove": "bash scripts-docker/api/remove.sh",
    "docker:caddy": "bash scripts-docker/caddy/run.sh",
    "docker:caddy:stop": "bash scripts-docker/caddy/stop.sh",
    "docker:caddy:log": "bash scripts-docker/caddy/log.sh",
    "docker:caddy:exec": "bash scripts-docker/caddy/exec.sh",
    "docker:caddy:reload": "bash scripts-docker/caddy/reload.sh",
    "docker:caddy:remove": "bash scripts-docker/caddy/remove.sh",
    "test": "pnpm --filter=@fastify-oauth-api/backend test",
    "test:ui": "pnpm --filter=@fastify-oauth-api/backend test:ui",
    "test:run": "pnpm --filter=@fastify-oauth-api/backend test:run",
    "test:coverage": "pnpm --filter=@fastify-oauth-api/backend test:coverage",
    "test:db:create": "pnpm --filter=@fastify-oauth-api/backend test:db:create",
    "test:db:drop": "pnpm --filter=@fastify-oauth-api/backend test:db:drop",
    "test:db:reset": "pnpm --filter=@fastify-oauth-api/backend test:db:reset",
    "test:db:migrate": "pnpm --filter=@fastify-oauth-api/backend test:db:migrate",
    "test:db:setup": "pnpm --filter=@fastify-oauth-api/backend test:db:setup",
    "db:generate": "pnpm --filter=@fastify-oauth-api/backend db:generate",
    "db:push": "pnpm --filter=@fastify-oauth-api/backend db:push",
    "db:migrate": "pnpm --filter=@fastify-oauth-api/backend db:migrate",
    "db:studio": "pnpm --filter=@fastify-oauth-api/backend db:studio",
    "dev:token": "pnpm --filter=@fastify-oauth-api/backend dev:token",
    "lint": "pnpm --filter=@fastify-oauth-api/backend lint",
    "lint:fix": "pnpm --filter=@fastify-oauth-api/backend lint:fix",
    "format": "pnpm --filter=@fastify-oauth-api/backend format",
    "format:check": "pnpm --filter=@fastify-oauth-api/backend format:check",
    "type-check": "pnpm --filter=@fastify-oauth-api/backend type-check",
    "prepare": "husky"
  },
  "keywords": [
    "fastify",
    "oauth",
    "google-signin",
    "apple-signin",
    "jwt",
    "postgresql",
    "redis",
    "docker",
    "typescript",
    "drizzle-orm",
    "api",
    "rest-api",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "shadcn": "^3.5.0"
  },
  "overrides": {
    "esbuild": "^0.25.11"
  }
}
