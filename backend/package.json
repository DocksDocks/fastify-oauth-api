{
  "name": "@fastify-oauth-api/backend",
  "version": "1.0.0",
  "description": "Backend API for Fastify OAuth API",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "dotenvx run -- tsx watch --ignore 'src/setup/**' src/server.ts",
    "build": "tsc",
    "build:prod": "tsup",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test:db:create": "bash ../scripts/test-db/create.sh",
    "test:db:drop": "bash ../scripts/test-db/drop.sh",
    "test:db:reset": "bash ../scripts/test-db/reset.sh",
    "test:db:migrate": "bash ../scripts/test-db/migrate.sh",
    "test:db:setup": "bash ../scripts/test-db/setup.sh",
    "dev:token": "dotenvx run -- tsx src/utils/dev-token-generator.ts",
    "test": "dotenvx run -- vitest",
    "test:ui": "dotenvx run -- vitest --ui",
    "test:run": "dotenvx run -- vitest run",
    "test:coverage": "dotenvx run -- vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "fastify",
    "oauth",
    "google-signin",
    "apple-signin",
    "jwt",
    "postgresql",
    "redis",
    "docker",
    "typescript",
    "drizzle-orm",
    "api",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/auth": "^5.0.3",
    "@fastify/autoload": "^6.0.3",
    "@fastify/bearer-auth": "^10.0.2",
    "@fastify/compress": "^8.0.3",
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^11.1.0",
    "@fastify/csrf-protection": "^7.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/redis": "^7.1.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.3.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@sinclair/typebox": "^0.34.41",
    "@types/bcryptjs": "^2.4.6",
    "apple-signin-auth": "^2.0.0",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.6",
    "fastify": "^5.6.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^6.0.0",
    "google-auth-library": "^10.4.1",
    "ioredis": "^5.4.2",
    "nanoid": "^5.1.6",
    "pino": "^10.0.0",
    "postgres": "^3.4.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.27.1",
    "@eslint/js": "^9.20.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.10.6",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/ui": "^3.0.6",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.20.0",
    "globals": "^15.15.0",
    "lint-staged": "^15.3.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.0.6"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
